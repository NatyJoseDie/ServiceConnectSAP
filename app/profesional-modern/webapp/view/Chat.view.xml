<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:m="sap.m" controllerName="app.profesional-modern.controller.Chat">
  <m:Page title="Chat" showNavButton="true" navButtonPress="onBack">
    <m:content>
      <m:List id="lstMessages" />
    </m:content>
    <m:footer>
      <m:Toolbar>
        <m:Input id="inpMsg" width="100%" placeholder="Escribir mensaje..." />
        <m:Button text="Enviar" type="Emphasized" press="onSend" />
      </m:Toolbar>
    </m:footer>
  </m:Page>
</mvc:View>

<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:m="sap.m" controllerName="app.profesional-modern.controller.ProfessionalEdit">
  <m:Page title="Editar profesional" showNavButton="true" navButtonPress="onCancel">
    <m:content>
      <m:SimpleForm editable="true">
        <m:Label text="Nombre" />
        <m:Input value="{fullName}" />
        <m:Label text="Profesión" />
        <m:Input value="{professionType}" />
        <m:Label text="Ubicación" />
        <m:Input value="{location}" />
        <m:Label text="Disponibilidad" />
        <m:Select selectedKey="{= ${availability} ? 'yes' : 'no' }">
          <m:items>
            <m:Item key="yes" text="Sí" />
            <m:Item key="no" text="No" />
          </m:items>
        </m:Select>
        <m:Label text="Rating" />
        <m:StepInput value="{rating}" min="0" max="5" step="0.1" />
      </m:SimpleForm>
      <m:Toolbar>
        <m:ToolbarSpacer />
        <m:Button text="Guardar" type="Emphasized" press="onSave" />
        <m:Button text="Cancelar" press="onCancel" />
      </m:Toolbar>
    </m:content>
  </m:Page>
</mvc:View>

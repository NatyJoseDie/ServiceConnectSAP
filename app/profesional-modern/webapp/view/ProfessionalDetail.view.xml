<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:m="sap.m" xmlns:f="sap.f" controllerName="app.profesional-modern.controller.ProfessionalDetail">
  <f:DynamicPage>
    <f:title>
      <m:Title text="Detalle de profesional" />
    </f:title>
    <f:header>
      <f:DynamicPageHeader>
        <m:Toolbar>
          <m:Button text="Editar" type="Emphasized" press="onEdit" />
          <m:Button text="Enviar mensaje" icon="sap-icon://message-popup" press="onSendMessage" />
        </m:Toolbar>
      </f:DynamicPageHeader>
    </f:header>
    <f:content>
      <f:GridContainer columns="XL2 L2 M1 S1" width="100%">
        <f:items>
          <f:Card width="auto">
            <f:CardHeader titleText="Perfil" subtitleText="Datos" />
            <f:CardContent>
              <m:VBox>
                <m:ObjectHeader title="{fullName}" intro="{professionType}" />
                <m:ObjectAttribute title="Ubicación" text="{location}" />
                <m:ObjectAttribute title="Email" text="{email}" />
                <m:ObjectAttribute title="Teléfono" text="{phone}" />
                <m:ObjectNumber number="{rating}" unit="Rating" />
                <m:ObjectStatus text="{= ${availability} ? 'Disponible' : 'No disponible' }" state="{= ${availability} ? 'Success' : 'Error' }" />
              </m:VBox>
            </f:CardContent>
          </f:Card>
          <f:Card width="auto">
            <f:CardHeader titleText="Servicios ofrecidos" />
            <f:CardContent>
              <m:List id="listSO" items="{path:'/ServiceOffering', parameters: { $select: 'description,priceRange,active,professional_ID_ID' } }">
                <m:CustomListItem>
                  <m:HBox>
                    <m:Text text="{description}" />
                    <m:ToolbarSpacer />
                    <m:ObjectStatus text="{priceRange}" state="Success" />
                  </m:HBox>
                </m:CustomListItem>
              </m:List>
            </f:CardContent>
          </f:Card>
        </f:items>
      </f:GridContainer>
    </f:content>
  </f:DynamicPage>
</mvc:View>
